<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Post name</th>
      <th>Location name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Text</th>
      <th>Image</th>
      <th>Rating</th>
      <th>Favorite</th>
      <th>Bar</th>
      <th>Restaurant</th>
      <th>Activity</th>
      <th>User</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.post_name %></td>
        <td><%= post.location_name %></td>
        <td><%= post.address %></td>
        <td><%= post.phone %></td>
        <td><%= post.text %></td>
        <td><%= post.image %></td>
        <td><%= post.rating_id %></td>
        <td><%= post.favorite_id %></td>
        <td><%= post.bar %></td>
        <td><%= post.restaurant %></td>
        <td><%= post.activity %></td>
        <td><%= post.user %></td>
        <td><%= post.location %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
