<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :post_name %>
    <%= form.text_field :post_name, id: :post_post_name %>
  </div>

  <div class="field">
    <%= form.label :venue %>
    <%= form.select :venue_id, options_for_select( Venue.order('name ASC').pluck( :name, :id), :required => true ) %>
  </div>
  

  <div class="field">
    <%= form.label :text %>
    <%= form.text_area :text, id: :post_text %>
  </div>

  <div class="field">
    <%= form.label :rating_id %>
    <%= form.number_field :rating_id, id: :post_rating_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
