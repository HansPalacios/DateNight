<p id="notice"><%= notice %></p>

<h1>Locations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Bio</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Image</th>
      <th>Rating</th>
      <th>Favorite</th>
      <th>Bar</th>
      <th>Restaurant</th>
      <th>Activity</th>
      <th>Sponsor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.name %></td>
        <td><%= location.bio %></td>
        <td><%= location.address %></td>
        <td><%= location.phone %></td>
        <td><%= location.image %></td>
        <td><%= location.rating_id %></td>
        <td><%= location.favorite_id %></td>
        <td><%= location.bar %></td>
        <td><%= location.restaurant %></td>
        <td><%= location.activity %></td>
        <td><%= location.sponsor %></td>
        <td><%= link_to 'Show', location %></td>
        <td><%= link_to 'Edit', edit_location_path(location) %></td>
        <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Location', new_location_path %>
