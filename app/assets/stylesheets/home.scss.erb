#homepage {
	padding-top: 20px;
	height: 780px;
	.autoplay{
	  text-align: center;
		background-color: rgba(247,247,247,1);
	  .slick-prev:before, .slick-next:before {
	  	color: rgba(0,0,0,.3);
	  }
	}
	.container {
		padding-left: 0;
		padding-right: 0;
	  width: 100%;
		height: 150px;
		text-align: center;
		.carousels {
			height: 140px;
			width: 140px;
			background-size: cover;
			background-repeat: no-repeat;
			background-position: 50% 50%;
			position: relative;
			.sponsor {
				text-shadow: 1px 1px rgba(0,0,0,.5);
				color: rgba(255,255,255,.8);
				transform: rotate(-90deg);
				transform-origin: left top 0;
				margin-top: 100px;
				width: 50px;
				font-size: 15px;
				z-index: -1;
			}
			a {
				margin: 30px;
				text-shadow: 1px 1px rgba(0,0,0,.5);
				color: rgba(255,255,255,.8);
				font-size: 30px;
				position: absolute;
				margin-top: -80px;
				margin-left: -160px;
				width: 330px;
				text-align: center;
			}
		}
		#carousel1 {
			background-image: url('<%= Venue.find(10).image %>');
		}
		#carousel2 {
			background-image: url('<%= Venue.find(45).image %>');
		}
		#carousel3 {
			background-image: url('<%= Venue.find(6).image %>');
		}
		#carousel4 {
			background-image: url('<%= Venue.find(26).image %>');
		}
		#carousel5 {
			background-image: url('<%= Venue.find(13).image %>');
		}
		#carousel6 {

			background-image: url('<%= Venue.find(17).image %>');
		}
	}
	.leftbar {
	width: 100%;
	margin-right: 0;
	display: block;
	}
	.index {
		margin-top: 50px;
		width: 100%;
		height: 450px;
		text-align: center;
		padding-right: 20px;
		display: block;
		h3 {
			width: 100%;
			text-align: center;
			color: rgba(152,0,0,1);
			margin: 20px;
		}
		.info {
			padding: 10px 150px;
			p {
				color: rgba(0,0,0,.7);
				width: 100%;
				text-align: center;
				padding: 10px;
				}
				img {
					height: 250px;
				}
		}
		.bars, .restaurants, .activities {
			height: 100%;
			text-align: center;
			width: 200px;
			height: 200px;
			overflow: break-word;
			padding: 10px;
			h5 {
				color: rgba(0,0,0,.7);
				height: 80px;
				width: 200px;
				margin: 0 auto;
			}
			a, h3 {
				margin: 0 auto;
				width: 200px;
				height: 30px;
				text-align: center;
				cursor: pointer;
				&:hover {
					text-shadow: .5px .5px grey;
				}
			}
		}
	}
	.homeforum {
		width: 100%;
		margin: 0 auto;
		margin-right: 0;
		height: 500px;
		background-color: rgba(177,138,52,.13);
		text-align: center;
		font-size: 10px;
		overflow-y: scroll;
		.checkoutmoreposts {
			margin: 10px auto;
			width: 90px;
			text-align: center;
		}
		.title {
			width: 100%;
			text-align: center;
			height: 50px;
			a {
				width: 100px;
				padding: 10px;
				text-align: center;
				margin: 0 auto;
			}
		}
		.posts {
			background-color: rgba(228,164,70,.3);
			text-align: center;
			padding: 5px;
			margin: 4px auto;
			height: 70px;
			width: 85%;
			border-top: 8px solid rgba(228,164,70,.4);
			.postname{
				margin: 0 auto;
				font-size: 9px;
				color: rgba(118,31,29,1);
			}
			strong {
				margin: 0 auto;
			}
			img {
				max-width: 95%;
				max-height: 50px;
				margin: 1px auto;
			}
			p {
			font-size: 8px;
			margin-left: 60%;
			}
		}
		.col-md-4 {
			padding: 0;
		}
	}
}
